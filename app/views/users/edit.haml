.row
  .col-md-4.col-md-offset-4.col-xs-10.col-xs-offset-1
    = semantic_form_for @user, html: {id: 'user-form'} do |f|  
      #price-notification.panel.panel-default
        .panel-heading
          %h3.panel-title Account Settings
        .panel-body
          = f.inputs do
            = f.input :email

            .input.form-group
              %label.control-label
                Password
              
              .form-wrapper
                .form-control.mock-input
                  = link_to "Reset your password", new_user_password_path

          = f.actions do
            = f.action :submit, label: 'Save Settings', button_html: {data: {disable_with: 'Saving...'}, class: 'btn btn-default pull-right'}